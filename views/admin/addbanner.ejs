    <script>
 document.addEventListener('DOMContentLoaded', function () {
    const preview = document.getElementById('imagePreview');
    const input = document.getElementById('imageInput');
    let cropper;

    function imagePreview() {
        if (input.files && input.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;

                // Initialize Cropper.js after image is loaded
                preview.onload = function () {
                    if (cropper) {
                        cropper.destroy();
                    }
                    cropper = new Cropper(preview, {
                        aspectRatio: 0,
                        viewMode: 0,
                        crop: function(event) {
                            const canvas = cropper.getCroppedCanvas();
                            preview.src = canvas.toDataURL();
                        }
                    });
                };
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    input.addEventListener('change', imagePreview);
});



        function block(bannerId) {
    Swal.fire({
        title: "Are you sure?",
        text: "You really want to deactivate this banner!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, deactivate it!"
    }).then((result) => {
        if (result.isConfirmed) {
            Swal.fire({
                title: "deactivated!", 
                text: "You have been deactivated the product.",
                icon: "success"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/admin/blockbanner', {
                        method: "PATCH",
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ bannerId:bannerId })
                    }).then(response => response.json()).then(data => {
                        window.location.reload();
                        console.log(data.message);
                    });
                }
            });
        }
    });
}



function unblock(bannerId){
