    <script>
       function block(productId) {
    Swal.fire({
        title: "Are you sure?",
        text: "You really want to block this product!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Block it!"
    }).then((result) => {
        if (result.isConfirmed) {
            Swal.fire({
                title: "Blocked!", 
                text: "Your have been blocked the product.",
                icon: "success"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/admin/blockproduct', {
                        method: "PATCH",
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId:productId })
                    }).then(response => response.json()).then(data => {
                        window.location.reload();
                        console.log(data.message);
                    });
                }
            });
        }
    });
}


function unblock(productId){
    Swal.fire({
  title: "Are you sure?",
  text: "You really need to unblock the product!",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Yes, unblock it!"
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire({
      title: "unblocked!",
      text: "Your have unblocked the product",
      icon: "success"
    }).then((result)=>{
        if(result.isConfirmed){
            fetch('/admin/unblockproduct',{
                method:"PATCH",
                headers:{
                    'Content-Type':'application/json'
                },
                body:JSON.stringify({productId})
            }).then(response=>response.json()).then(data=>{
                window.location.reload()
                console.log(data.message)
            })
        }
    })
  }
});
}
    </script>
