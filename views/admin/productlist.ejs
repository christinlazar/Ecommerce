<body>
    <div class="screen-overlay"></div>
    <!-- ---------------include------------ -->
    <%- include('sidenav') %>
    <main class="main-wrap">
        <%- include('adminheader.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                    <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a>
                    <a href="#" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" value="">
                            </div>
                        </div>
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <%if(locals.category){ %> -->
                                    <% for(let i=0;i<category.length;i++){ %>
                                        <option><%=category[i].name%></option>    
                            <%}}%>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <input type="date" value="02.05.2021" class="form-control">
                        </div>
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                    <!-- ---------------------------- -->
                </header> <!-- card-header end// -->
                <%if(locals.product){%>
                    <%for(let i=0;i<product.length;i++){%>
                <div class="card-body">
                    <article class="itemlist">
                        <div class="row align-items-center">
                            <div class="col col-check flex-grow-0">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                <a class="itemside" href="#">
                                    <div class="left">
                                        <img src="/uploads/<%=product[i].image[0]%>" class="img-sm img-thumbnail" alt="Item" onerror="console.error('Image failed to load');">
                                    </div>
                                    <div class="info">
                                        <h6 class="mb-0"><%=product[i].name%></h6>
                                    </div>
                                </a>
                            </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-price">
                                 <span>Price  :  ₹<%= product[i].price.regularprice %></span> 
                                 <!-- <span class="text ms-5" ><%= product[i].size.s.quantity%> -->
                                </div>
                             
                            <div class="col-lg-2 col-sm-2 col-4 col-status">
                                <%if(product[i].is_active==true){ %>
                                    <span class="badge rounded-pill alert-success">In stock</span>
                                <%}else{%>
                                    <span class="badge rounded-pill alert-danger">Not in stock</span>
                                <%}%>
                            </div>
                            <!-- <div class="col-lg-1 col-sm-2 col-4 col-date">
                                <span></span>
                            </div> -->
                            <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                <a href="/admin/editproduct?id=<%=product[i]._id%>" class="btn btn-sm font-sm rounded btn-brand" >
                                    <i class="material-icons md-edit"></i> Edit
                                </a>
                                <%if(product[i].is_active==true){%>
                                    <a href="#" class="btn btn-sm font-sm btn-danger rounded" onclick="block('<%=product[i]._id%>')">
                                        <i class="material-icons md"></i> Block
                                    </a>
                                <%}else{%>
                                    <a href="#" class="btn btn-sm font-sm btn-white rounded" onclick="unblock(`<%=product[i]._id%>`)">
                                        <i class="material-icons md"></i> unblock
                                    </a>
                                <%}%>

                            </div>
                        </div> <!-- row .// -->
                    </article> <!-- itemlist  .// -->
                </div> <!-- card-body end// -->
                <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
                <%}}%>    
                <!-- ------------------------------------------------------------------------------------------------------------------------------ -->
            </div> <!-- card end// -->

           

            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item active"><a class="page-link" href="#">01</a></li>
                        <li class="page-item"><a class="page-link" href="#">02</a></li>
                        <li class="page-item"><a class="page-link" href="#">03</a></li>
